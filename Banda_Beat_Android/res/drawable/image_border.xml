    </item>
    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <solid android:color="#ffffffff" />
        </shape>
    </item>
</layer-list>